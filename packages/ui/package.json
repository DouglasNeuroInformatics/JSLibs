{
  "name": "@douglasneuroinformatics/ui",
  "version": "2.3.1",
  "description": "Common React components and tailwind config for DNP projects",
  "license": "LGPL-3.0",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tailwind.config": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "src/**/!(*.stories.tsx)",
    "tailwind.config.js"
  ],
  "scripts": {
    "build": "bun lint && bun build:dist",
    "build:dist": "tsc -b tsconfig.build.json && esbuild --bundle --format=esm --outdir=dist --packages=external --platform=browser --sourcemap=external src/index.ts",
    "build:storybook": "storybook build",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "push": "bun build:dist && npm publish",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@douglasneuroinformatics/ajv": "^1.0.2",
    "@douglasneuroinformatics/form-types": "^1.1.1",
    "@douglasneuroinformatics/utils": "^1.0.1",
    "@headlessui/react": "^1.7.17",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/container-queries": "^0.1.1",
    "ajv": "^8.12.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.2",
    "prop-types": "^15.8.1",
    "react-i18next": "^13.2.2",
    "recharts": "^2.8.0",
    "tailwind-merge": "^1.14.0",
    "ts-pattern": "^5.0.5",
    "type-fest": "^4.3.3",
    "zustand": "^4.4.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.4.6",
    "@storybook/react": "^7.4.6",
    "@storybook/react-vite": "^7.4.6",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.9",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.4",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.31",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.6",
    "storybook-react-i18next": "^2.0.9",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.10"
  },
  "peerDependencies": {
    "@headlessui/tailwindcss": "^0.2.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}