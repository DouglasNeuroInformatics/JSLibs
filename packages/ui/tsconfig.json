{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*"]
}
